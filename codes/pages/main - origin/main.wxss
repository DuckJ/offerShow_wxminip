.top{
  position: fixed;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  top: 0;
  left: 0;
  width: 100%; 
  /*border-bottom: 2rpx limegreen solid;     */
  padding: 16rpx 8rpx;
}
.top input{
    flex: 5 0 0;
    height: 72rpx;
    border: 1rpx lightblue solid;
    border-radius: 16rpx; 
    padding: 8rpx;
    background: white;
    color: black;
}
.top .btn{
    height: 80rpx;
    text-align: center;
    font-size: 36rpx;
    vertical-align: middle;
    line-height: 80rpx;
    margin: 0 0 0 16rpx;
    border-left: 1px white solid;
}
.top .searchbtn{
    flex: 2 0 0;    
}
.top .about{
    flex: 1 0 0;
}
.listcontain{
    margin-top: 140rpx;
}

.foot{
    height: 130rpx;
}
.bottom{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  display: -webkit-flex;
  background: white;
  line-height: 120rpx;
}

.bottom .btn{
    flex: 1 0 0;
    text-align: center;
    color: gray;
    border-top: 8rpx gray solid;  
}
.btn.curr{
    border-top: 8rpx dodgerblue solid;  
    color: dodgerblue;
}

