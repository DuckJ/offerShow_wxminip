
<!--pages/corp/corp.wxml-->
<view class="weui-flex my-top my-top-fixed my-top-style">
  <view class="my-btn-icon" bindtap="tapBack">
    <image src="../../static/icon_nav_back.png"></image>
  </view>
  <view class="weui-flex__item">
    <view class="placeholder">{{corp}}</view>
  </view>
</view>
<view class="my-noscroll">
  <view class="weui-panel weui-panel_access">
    <view class="weui-panel__hd">
      <view class="weui-media-box__desc weui-media-box__title_in-text my-panel-title">热门职位：</view>
    </view>
    <view class="weui-panel__bd">
      <view class="weui-media-box weui-media-box_text">
        <view class="weui-media-box__desc">
          <span class="my-panel-tag" wx:for="{{positionls}}" wx:key="{{*this}}">{{item}}</span> 
        </view>
      </view>
    </view>
    <view class="weui-panel__hd">
      <view class="weui-media-box__desc weui-media-box__title_in-text my-panel-title">最可信工资：</view>
    </view>
    <view class="weui-panel__bd">
      <view class="weui-media-box weui-media-box_text">
        <view class="weui-media-box__desc">
          <text class="my-panel-cell">{{salary}}</text>
        </view>
      </view>
    </view>
  </view>
  <view class="weui-panel weui-panel_access">
    <view class="weui-panel__hd">
      <view class="weui-media-box__desc weui-media-box__title_in-text my-panel-title">详细评价(点击查看详情)：</view>
    </view>
    <view class="weui-panel__bd">
      <navigator class="weui-media-box weui-media-box_text" wx:for="{{detaills}}" wx:key="{{*this}}" url="../detail/detail?id={{item.id}}">
        <view class="weui-media-box__desc">
            <text class="my-panel-cell my-text-left">{{item.city}}</text>
            <view class="my-panel-cell my-text-right">热度：{{item.number}}</view>      
        </view>          
        <view class="weui-media-box__title">
          {{item.position}}
        </view>     
        <view class="weui-media-box__desc">
          {{item.remark}}
        </view>
        <view class="weui-media-box__desc">
          <text class="my-panel-cell my-text-left"></text>
          <text class="my-panel-cell my-text-right">工资：{{item.salary}}</text>
        </view>
      </navigator>
      <navigator class="weui-media-box weui-media-box_text" wx:for="{{offerls}}" wx:key="{{*this}}" url="../detail/detail?id={{item.id}}">
        <view class="weui-media-box__title">
          <text class="my-text-left">{{item.position}}</text>
          <text class="my-text-right my-panel-cell">热度：{{item.number}}</text>
        </view>
      </navigator>
    </view>
  </view>
</view>