/* pages/test/test.wxss */
page{
	height: 100%;
}
.my-top{
	height: 46px;
	line-height: 46px;
	font-size: 40rpx;
	color: white;
	text-align: center;
	box-sizing:border-box;
	border-bottom:1rpx solid #D7D6DC	
}
.my-top-style{
	background: dodgerblue;
	border: none;
	box-shadow: 0 2px 2px gray;
}

.weui-search-bar__cancel-btn, .weui-cell__bd{
	color: dodgerblue;
}
.my-btn-more{
	margin-right:10px;
	line-height: 28px;
}
.my-btn-more image{
	display: inline-block;
	height: 28px;
	width: 28px;
	vertical-align: middle;
}

.my-scroll{
	position: absolute;
	top: 50px;
	left: 0;
	bottom: 0;
	padding: 8px 0 8px 0;
}

.my-panel-left{
	display: inline-block;
	max-width: 60%;
}
.my-panel-right{
	display: inline-block;
	float: right;
}
.tag{
    display: inline-block;
    border: 1rpx dodgerblue solid;
    border-radius: 8rpx;
    margin: 8rpx;
    padding: 8rpx;
}
.my-text-left{
	text-align: left;
}
.my-text-right{
	float: right;
}
.my-bottom{
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	top: auto;
	height: 48px;
}
